doctype html
html(lang="fr")
  head
    title My Own Bookmarks

  body
    h1 Welcome on My Own Bookmarks
    p This application will help you manage your bookmarks!
    form(action="add", method="post", id="add-form")
        label Title:
        input(type="text", name="title")
        label Url:
        input(type="text", name="url")
        input(type="submit", id="btn-add", value="Add a new bookmark")
    ul
        - for(bookmark in bookmarks) {
        li
            a(href=bookmarks[bookmark].doc.url)= bookmarks[bookmark].doc.title
            | &nbsp;- (
            a(href="delete/#{bookmarks[bookmark].id}") delete
            | )
        - }
    script(type='text/javascript')(src='bundle.js')
